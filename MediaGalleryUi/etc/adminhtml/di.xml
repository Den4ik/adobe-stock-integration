<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\MediaGalleryUi\Model\Directories\FolderTree">
        <arguments>
            <argument name="path" xsi:type="string">media</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\App\Config\Value">
        <plugin name="admin_system_config_adobe_stock_save_plugin" type="Magento\MediaGalleryUi\Plugin\MediaGalleryIndexerTrigger" sortOrder="1"/>
    </type>
    <type name="Magento\MediaGalleryUi\Model\GetImageDetailsByAssetId">
        <arguments>
            <argument name="imageTypes" xsi:type="array">
                <item name="image" xsi:type="string">Image</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\MediaGalleryUi\Ui\Component\Listing\Columns\Sorting">
        <arguments>
            <argument name="filterFieldsMap" xsi:type="array">
                <item name="name_az" xsi:type="string">title</item>
                <item name="name_za" xsi:type="string">title</item>
                <item name="directory_desc" xsi:type="string">path</item>
                <item name="directory_asc" xsi:type="string">path</item>
                <item name="newest_first" xsi:type="string">created_at</item>
                <item name="oldest_first" xsi:type="string">created_at</item>
            </argument>
        </arguments>
    </type>
</config>
