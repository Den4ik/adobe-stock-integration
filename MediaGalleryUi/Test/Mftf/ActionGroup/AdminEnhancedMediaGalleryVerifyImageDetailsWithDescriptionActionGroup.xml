<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminEnhancedMediaGalleryVerifyImageDetailsWithDescriptionActionGroup">
        <annotations>
            <description>Verifies image information on the View Details panel including the description</description>
        </annotations>
        <arguments>
            <argument name="image"/>
        </arguments>

        <grabTextFrom selector="{{AdminEnhancedMediaGalleryViewDetailsWithDescriptionSection.title}}" stepKey="grabImageTitle"/>
        <assertStringContainsString stepKey="verifyImageTitle">
            <actualResult type="variable">grabImageTitle</actualResult>
            <expectedResult type="string">{{image.fileName}}</expectedResult>
        </assertStringContainsString>

        <grabTextFrom selector="{{AdminEnhancedMediaGalleryViewDetailsWithDescriptionSection.contentType}}" stepKey="grabContentType"/>
        <assertStringContainsStringIgnoringCase stepKey="verifyContentType">
            <actualResult type="variable">grabContentType</actualResult>
            <expectedResult type="string">{{image.extension}}</expectedResult>
        </assertStringContainsStringIgnoringCase>

        <grabTextFrom selector="{{AdminEnhancedMediaGalleryViewDetailsWithDescriptionSection.type}}" stepKey="grabType"/>
        <assertStringContainsString stepKey="verifyType">
            <actualResult type="variable">grabType</actualResult>
            <expectedResult type="string">Image</expectedResult>
        </assertStringContainsString>

        <grabTextFrom selector="{{AdminEnhancedMediaGalleryViewDetailsWithDescriptionSection.description}}" stepKey="grabDescription"/>
        <assertStringContainsString stepKey="verifyDescription">
            <actualResult type="variable">grabDescription</actualResult>
            <expectedResult type="string">Test Description</expectedResult>
        </assertStringContainsString>
    </actionGroup>
</actionGroups>
