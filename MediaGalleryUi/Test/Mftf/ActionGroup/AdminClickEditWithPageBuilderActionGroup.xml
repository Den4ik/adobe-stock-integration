<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminClickEditWithPageBuilderActionGroup">
        <annotations>
            <description>Clicks on edit with page builder buttons</description>
        </annotations>
        <click selector="//div[@data-index='description']//button" stepKey="clickOnPageBuilderButton"/>
        <waitForLoadingMaskToDisappear stepKey="waitForLoadingMaskToDisappear"/>
        </actionGroup>
</actionGroups>
