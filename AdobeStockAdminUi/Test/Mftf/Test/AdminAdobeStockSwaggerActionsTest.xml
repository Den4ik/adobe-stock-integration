<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminAdobeStockSwaggerActionsTest">
        <annotations>
            <features value="AdobeStock"/>
            <title value="User sees Adobe Stock actions from API"/>
            <testCaseId value="https://studio.cucumber.io/projects/131313/test-plan/folders/1051731/scenarios/4297030"/>
            <description value="Adobe stock actions are available on the Swagger page"/>
            <stories value="Adobe Stock API actions"/>
            <severity value="CRITICAL"/>
        </annotations>
        <before>
            <getOTP stepKey="getOtpCode"/>
            <createData entity="adminApiToken" stepKey="createAdminToken">
                <field key="otp">$getOtpCode</field>
            </createData>
        </before>
        <after></after>
        <actionGroup ref="StorefrontGoToSwaggerPageActionGroup" stepKey="goToSwaggerPage"/>
        <actionGroup ref="ApplyAdminTokenOnSwaggerPageActionGroup" stepKey="applyAdminToken">
            <argument name="token" value="$createAdminToken.return$"/>
        </actionGroup>
        <seeElement selector="{{SwaggerSection.swaggerActionTitle('adobeStockAssetApiAssetRepositoryV1')}}" stepKey="assertTitleOfFirtsAction"/>
        <seeElement selector="{{SwaggerSection.swaggerActionTitle('adobeStockImageApiGetImageListV1')}}" stepKey="assertTitleOfSecondAction"/>
        <seeElement selector="{{SwaggerSection.swaggerActionTitle('adobeStockAssetApiGetAssetListV1')}}" stepKey="assertTitleOfThirdAction"/>
    </test>
</tests>
