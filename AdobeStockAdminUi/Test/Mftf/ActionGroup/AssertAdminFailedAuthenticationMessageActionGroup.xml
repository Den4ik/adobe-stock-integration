<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertAdminFailedAuthenticationMessageActionGroup">
        <arguments>
            <argument name="message" type="string" defaultValue="Failed to authenticate to Adobe Stock API. Please correct the API credentials"/>
        </arguments>
        <see selector="{{AdobeStockSection.modal}}" userInput="{{message}}" stepKey="seeFailedAuthenticationMessage"/>
    </actionGroup>
</actionGroups>