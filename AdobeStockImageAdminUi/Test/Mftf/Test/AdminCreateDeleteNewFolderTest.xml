<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminCreateDeleteNewFolderTest">
        <annotations>
            <features value="AdobeStockImagePanel"/>
            <useCaseId value="https://github.com/magento/adobe-stock-integration/issues/1046; https://github.com/magento/adobe-stock-integration/issues/1047"/>
            <title value="Creating, deleting new folder functionality in Media Gallery"/>
            <testCaseId value="https://studio.cucumber.io/projects/131313/test-plan/folders/1054245/scenarios/4456547; https://studio.cucumber.io/projects/131313/test-plan/folders/1054245/scenarios/4457075"/>
            <description value="Creating, deleting new folder functionality in Media Gallery"/>
            <severity value="CRITICAL"/>
            <group value="adobe_stock_integration"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="AdminMediaGalleryEnhancedEnableActionGroup" stepKey="disableEnhancedMediaGallery">
                <argument name="enabled" value="1"/>
            </actionGroup>
            <actionGroup ref="AdminOpenMediaGalleryForPageNoEditorActionGroup" stepKey="openMediaGalleryForPage"/>
        </before>
        <after>
            <actionGroup ref="AdminMediaGalleryEnhancedEnableActionGroup" stepKey="disableEnhancedMediaGallery"/>
        </after>

        <actionGroup ref="AdminOpenNewFolderFormActionGroup" stepKey="openNewFolderForm"/>
        <actionGroup ref="AdminCreateNewFolderActionGroup" stepKey="createNewFolderWithNotValidName">
            <argument name="name" value="{{AdobeStockInvalidFolderData.name}}"/>
        </actionGroup>

        <grabTextFrom selector="{{AdobeStockFolderSection.folderNameValidationMessage}}" stepKey="grabValidationMessage"/>
        <assertContains stepKey="assertFirst">
            <actualResult type="variable">grabValidationMessage</actualResult>
            <expectedResult type="string">Please use only letters (a-z or A-Z) or numbers (0-9) in this field. No spaces or other characters are allowed.</expectedResult>
        </assertContains>

        <actionGroup ref="AdminCreateNewFolderActionGroup" stepKey="createNewFolder"/>
        <actionGroup ref="AdminAssertFolderNameActionGroup" stepKey="assertNewFolderCreated"/>

        <amOnPage url="admin/dashboard" stepKey="goToDashBoard"/>
        <actionGroup ref="AdminOpenMediaGalleryForPageNoEditorActionGroup" stepKey="openMediaGalleryForPage"/>
        <dontSeeElement selector="//span[contains(text(), 'Directory:')]" stepKey="folderNotSelected"/>
        <seeElement selector="{{AdobeStockFolderSection.folderDeleteButton}}, :disabled" stepKey="deleteFolderButtonIsDisabled"/>

        <actionGroup ref="AdminFolderSelectActionGroup" stepKey="selectFolder"/>
        <seeElement selector="{{AdobeStockFolderSection.folderDeleteButton}}" stepKey="deleteFolderButtonIsNotDisabled"/>
        <actionGroup ref="AdminFolderSelectActionGroup" stepKey="unselectFolder"/>
        <seeElement selector="{{AdobeStockFolderSection.folderDeleteButton}}, :disabled" stepKey="deleteFolderButtonIsDisabledAgain"/>

        <actionGroup ref="AdminFolderSelectActionGroup" stepKey="selectFolderForDelete"/>

        <click selector="{{AdobeStockFolderSection.folderDeleteButton}}" stepKey="clickDeleteButton"/>
        <waitForElementVisible selector="{{AdobeStockFolderSection.folderCancelDeleteButton}}" stepKey="waitBeforeModalLoads"/>
        <click selector="{{AdobeStockFolderSection.folderCancelDeleteButton}}" stepKey="cancelDeleteFolder"/>
        <actionGroup ref="AdminAssertFolderNameActionGroup" stepKey="assertFolderWasNotDeleted"/>

        <actionGroup ref="AdminFolderDeleteActionGroup" stepKey="deleteFolder"/>
        <actionGroup ref="AdminAssertFolderDoesNotExistActionGroup" stepKey="assertFolderWasDeleted"/>
    </test>
</tests>
