<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAdobeStockImsPopupSignInFillUserDataActionGroup">
        <switchToWindow stepKey="switchToWindow"/>
        <fillField selector="{{AdobeStockSection.adobeImsPopupUserEmail}}" userInput="{{_CREDS.magento/ADOBE_STOCK_USER_EMAIL}}" stepKey="fillUserEmail" />
        <click selector="{{AdobeStockSection.adobeImsPopUpUserPassword}}" stepKey="clickPasswordField" />
        <waitForPageLoad stepKey="waitForUserEmailToLoad"/>
        <fillField selector="{{AdobeStockSection.adobeImsPopUpUserPassword}}" userInput="{{_CREDS.magento/ADOBE_STOCK_USER_PASSWORD}}" stepKey="fillUserPassword" />
    </actionGroup>
</actionGroups>
