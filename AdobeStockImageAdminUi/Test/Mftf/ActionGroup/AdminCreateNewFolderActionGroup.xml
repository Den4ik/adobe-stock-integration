<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateNewFolderActionGroup">
        <arguments>
            <argument name="name" type="string"/>
        </arguments>
        <fillField selector="{{AdobeStockFolderSection.folderNameField}}" userInput="{{name}}" stepKey="setFolderName" />
        <click selector="{{AdobeStockFolderSection.folderConfirmCreateButton}}" stepKey="clickCreateButton"/>
    </actionGroup>
</actionGroups>
