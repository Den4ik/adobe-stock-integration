<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Communication/etc/communication.xsd">
    <topic name="media.indexer.image" is_synchronous="false" request="bool">
        <handler name="media.indexer.image.handler"
                 type="Magento\MediaIndexer\Indexer\Image" method="execute"/>
    </topic>
    <topic name="media.indexer.content" is_synchronous="false" request="bool">
        <handler name="media.indexer.content.handler"
                 type="Magento\MediaIndexer\Indexer\Content" method="execute"/>
    </topic>
</config>
